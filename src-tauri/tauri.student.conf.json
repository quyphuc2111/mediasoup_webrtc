{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "SmartlabStudent",
  "version": "11.2.9",
  "identifier": "com.zenadev.smartlabstudent",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Smartlab - Học sinh",
        "width": 400,
        "height": 300,
        "minWidth": 400,
        "minHeight": 300,
        "center": true,
        "visible": false,
        "skipTaskbar": true,
        "decorations": true,
        "resizable": false
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "id": "main-tray",
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false,
      "tooltip": "Smartlab Student - Đang chạy"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["binaries/smartlab-service.exe"],
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.13",
      "exceptionDomain": "",
      "signingIdentity": null
    },
    "windows": {
      "nsis": {
        "installMode": "perMachine",
        "installerIcon": "icons/icon.ico",
        "displayLanguageSelector": false,
        "startMenuFolder": "Smartlab Student",
        "installerHooks": "windows/hooks.nsi"
      }
    }
  },
  "plugins": {}
}